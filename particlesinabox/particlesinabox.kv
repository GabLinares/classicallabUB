#:import Factory kivy.factory.Factory

<main>:
	orientation: 'horizontal'

	pcbutton: pc_button.__self__

	massslider: mass_slider.__self__
	rslider: r_slider.__self__

	nrslider: nr_slider.__self__

	n1slider: n1_slider.__self__
	n2slider: n2_slider.__self__

	nbigslider: nbig_slider.__self__
	nsmallslider: nsmall_slider.__self__

	plotbox: plot_box.__self__
	speedbutton: speed_button.__self__
	statuslabel: status_label.__self__
	menu: menu.__self__

	parttab: part_tab.__self__
	partmenu: part_menu.__self__
	plotmenu: plot_menu.__self__
	rlmenu: rl_tab.__self__
	sbsmenu: sbs_tab.__self__
	brwmenu: brw_tab.__self__
	progressbar: progress_bar.__self__
	enplotbox: enplot_box.__self__
	histbox: hist_box.__self__
	acuhistbox: acuhist_box.__self__

	BoxLayout:
		id: plot_box
		size_hint: (None, 1)
		size: (self.height, self.height)
		on_touch_down: root.update_pos(args[1])

	BoxLayout:
		orientation: 'vertical'
		size_hint: (0.25, 1)
		BoxLayout:
			size_hint: (1, 0.1)
			orientation: 'horizontal'
			Button:
				id: pc_button
				#text: 'Compute'
				background_normal: 'Icons/compute.png'
				background_down: 'Icons/computeb.png'
				on_press: root.playcompute()
			Button:
				#text: 'Pause'
				background_normal: 'Icons/pause.png'
				background_down: 'Icons/pauseb.png'
				on_press: root.pause()
			Button:
				#text: 'Stop'
				background_normal: 'Icons/stop.png'
				background_down: 'Icons/stopb.png'
				on_press: root.stop()
			Button:
				id: speed_button
				background_normal: 'Icons/black.png'
				font_size: '30sp'
				markup: True
				on_press: root.change_speed()
			Button:
				#text: 'Time Inversion'
				background_normal: 'Icons/rewind.png'
				background_down: 'Icons/rewindb.png'
				on_press: root.timeinversion()
		BoxLayout:
			size_hint: (1, 0.1)
			orientation: 'horizontal'
			Label:
				text: 'Status:'
			Label:
				id: status_label
				text: 'Ready'
			Button:
				#text: 'Save'
				background_normal: 'Icons/save.png'
				background_down: 'Icons/saveb.png'
				on_press: root.savepopup()
			Button:
				#text: 'Load'
				background_normal: 'Icons/load.png'
				background_down: 'Icons/laodb.png'
				on_press: root.loadpopup()
		ProgressBar:
			id: progress_bar
			max: 100
			size_hint: (1, 0.01)
		BoxLayout:
			size_hint: (1, 0.5)
			TabbedPanel:
				id: plot_menu
				do_default_tab: False
				background_image: 'Icons/black.png'
				TabbedPanelItem:
					text: 'Energy'
					BoxLayout:
						id: enplot_box
				TabbedPanelItem:
					text: 'Momentum'
					BoxLayout:
						id: hist_box
				TabbedPanelItem:
					text: 'Acu'
					BoxLayout:
						id: acuhist_box
		TabbedPanel:
			id: menu
			size_hint: (1, 0.5)
			do_default_tab: False
			background_image: 'Icons/black.png'
			TabbedPanelItem:
				text: 'Particles'
				id: part_tab
				BoxLayout:
					size_hint: (1, 1)
					orientation: 'vertical'
					BoxLayout:
						orientation: 'horizontal'
						size_hint: (1, 0.5)
						BoxLayout:
							orientation: 'vertical'
							size_hint: (0.1, 1)
							Button:
								#text: 'Add'
								background_normal: 'Icons/add.png'
								background_down: 'Icons/addb.png'
								on_press: root.on_touch_Slider()
							Button:
								#text: 'Reset'
								background_normal: 'Icons/clear.png'
								background_down: 'Icons/clearb.png'
								on_press: root.reset_particle_list()
						BoxLayout:
							orientation: 'vertical'
							size_hint: (1, 1)
							BoxLayout:
								orientation: 'horizontal'
								size_hint: (1, 0.1)
								Label:
									text: 'm'
									markup: True
									size_hint: (0.2, 1)
								Label:
									text: str(round(mass_slider.value,2))
									size_hint: (0.2, 1)
								Slider:
									id: mass_slider
									size_hint: (1, 1)
									min: 1
									max: 1
									step: 0.5
							BoxLayout:
								orientation: 'horizontal'
								size_hint: (1, 0.1)
								Label:
									text: 'R'
									markup: True
									size_hint: (0.2, 1)
								Label:
									text: str(round(r_slider.value,2))
									size_hint: (0.2, 1)
								Slider:
									id: r_slider
									size_hint: (1, 1)
									min: -100
									max: 100
									step: 1

					TabbedPanel:
						id: part_menu
						size_hint: (1, 1)
						do_default_tab: False
						background_image: 'Icons/black.png'
						TabbedPanelItem:
							text: 'Random Lattice'
							id: rl_tab
							on_touch_up: root.on_touch_Submenu()
							BoxLayout:
								orientation: 'vertical'
								size_hint: (1, 1)
								BoxLayout:
									orientation: 'horizontal'
									Label:
										text: 'N'
										markup: True
										size_hint: (0.2, 1)
									Label:
										text: str(round(nr_slider.value))
										size_hint: (0.2, 1)
									Slider:
										id: nr_slider
										size_hint: (1, 1)
										min: 1
										max: 12
										step: 1
										on_touch_up: root.on_touch_Slider()
						TabbedPanelItem:
							text: 'Subsystems'
							id: sbs_tab
							on_touch_up: root.on_touch_Slider()
							BoxLayout:
								orientation: 'vertical'
								size_hint: (1, 1)
								BoxLayout:
									orientation: 'horizontal'
									Label:
										text: 'N[sub]1[/sub]'
										markup: True
										size_hint: (0.2, 1)
									Label:
										text: str(round(n1_slider.value,2))
										size_hint: (0.2, 1)
									Slider:
										id: n1_slider
										size_hint: (1, 1)
										min: 1
										max: 6
										step: 1
										on_touch_up: root.on_touch_Slider()
								BoxLayout:
									orientation: 'horizontal'
									Label:
										text: 'N[sub]2[/sub]'
										markup: True
										size_hint: (0.2, 1)
									Label:
										text: str(round(n2_slider.value,2))
										size_hint: (0.2, 1)
									Slider:
										id: n2_slider
										size_hint: (1, 1)
										min: 1
										max: 6
										step: 1
										on_touch_up: root.on_touch_Slider()
						TabbedPanelItem:
							text: 'Brownian'
							id: brw_tab
							on_touch_up: root.on_touch_Slider()
							BoxLayout:
								orientation: 'vertical'
								size_hint: (1, 1)
								BoxLayout:
									orientation: 'horizontal'
									Label:
										text: 'N[sub]big[/sub]'
										markup: True
										size_hint: (0.2, 1)
									Label:
										text: str(round(nbig_slider.value,2))
										size_hint: (0.2, 1)
									Slider:
										id: nbig_slider
										size_hint: (1, 1)
										min: 1
										max: 3
										step: 1
										on_touch_up: root.on_touch_Slider()
								BoxLayout:
									orientation: 'horizontal'
									Label:
										text: 'N[sub]small[/sub]'
										markup: True
										size_hint: (0.2, 1)
									Label:
										text: str(round(nsmall_slider.value,2))
										size_hint: (0.2, 1)
									Slider:
										id: nsmall_slider
										size_hint: (1, 1)
										min: 2
										max: 12
										step: 2
										on_touch_up: root.on_touch_Slider()
<savewindow>:
	text_input: text_input
	BoxLayout:
		orientation: 'vertical'
		FileChooserListView:
			id: file_chooser
			on_selection: text_input.text = self.selection and self.selection[0] or ''
			rootpath: 'Saves'
		TextInput:
			id: text_input
			size_hint: (1, None)
			height: 30
			multiline: False
		BoxLayout:
			orientation: 'horizontal'
			size_hint: (1, None)
			height: 60
			Button:
				text: 'Save'
				on_press: root.save(file_chooser.path, text_input.text)
			Button:
				text: 'Cancel'
				on_press: root.cancel()

<loadwindow>:
	BoxLayout:
		orientation: 'vertical'
		FileChooserListView:
			id: file_chooser
			rootpath: 'Saves'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: (1, None)
			height: 60
			Button:
				text: 'Load'
				on_press: root.load(file_chooser.path, file_chooser.selection)
			Button:
				text: 'Cancel'
				on_press: root.cancel()

<plotwindow>:
	auto_dismiss: True



