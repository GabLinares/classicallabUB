

<main>:
	orientation: 'horizontal'

	param0: param0_slider.value
	param0slider: param0_slider
	param1: param1_slider.value
	param1slider: param1_slider
	param2: param2_slider.value
	param3: param3_slider.value
	
	mass: mass_slider.value
	x0: x0_slider.value
	x0slider: x0_slider
	y0: y0_slider.value
	y0slider: y0_slider
	vx0: vx0_slider.value
	vy0: vy0_slider.value

	plotbox: plot_box
	speedbutton: speed_button
	statuslabel: status_label
	menu: menu
	
	BoxLayout:
		id: plot_box
		size_hint: (None, 1)
		size: (self.height, self.height)
		on_touch_down: root.update_parameters(args[1])
	BoxLayout:
		orientation: 'vertical'
		size_hint: (0.25, 1)
		BoxLayout:
			size_hint: (1, 0.1)
			orientation: 'horizontal'
			Button:
				text: 'Play'
				on_press: root.play()
			Button:
				text: 'Pause'
				on_press: root.pause()
			Button:
				text: 'Stop'
				on_press: root.stop()
			Button:
				id: speed_button
				on_press: root.change_speed()
		BoxLayout:
			size_hint: (1, 0.1)
			orientation: 'horizontal'
			Button:
				text: 'Compute'
				on_press: root.compute()
			Label:
				id: status_label
			Button:
				text: 'Save'
				on_press: root.save()
			Button:
				text: 'Load'
				on_press: root.load()
		TabbedPanel:
			id: menu
			size_hint: (1, 1)
			do_default_tab: False
			TabbedPanelItem:
				text: 'Potentials'
				BoxLayout:
					size_hint: (1, 1)
					orientation: 'vertical'
					ListView:
						id: pot_list
						item_strings: root.potentials
						size_hint: (1, 1)
					BoxLayout:
						orientation: 'horizontal'
						size_hint: (1, 0.1)
						Button:
							text: 'Add'
							on_press: root.add_pot_list()
						Button:
							text: 'Reset'
							on_press: root.reset_pot_list()
					BoxLayout:
						orientation: 'vertical'
						size_hint: (1, 1)

						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'x0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(param0_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: param0_slider
								size_hint: (1, 1)
								min: -100
								max: 100
								step: 1
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'y0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(param1_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: param1_slider
								size_hint: (1, 1)
								min: -100
								max: 100
								step: 1
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'V0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(param2_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: param2_slider
								size_hint: (1, 1)
								min: -100
								max: 100
								step: 1
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'Sigma'
								size_hint: (0.2, 1)
							Label:
								text: str(round(param3_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: param3_slider
								size_hint: (1, 1)
								min: 0.1
								max: 20
								step: 0.1
			TabbedPanelItem:
				text: 'Particles'
				BoxLayout:
					size_hint: (1, 1)
					orientation: 'vertical'
					ListView:
						id: part_list
						item_strings: root.particlestrings
						size_hint: (1, 1)
					BoxLayout:
						orientation: 'horizontal'
						size_hint: (1, 0.1)
						Button:
							text: 'Add'
							on_press: root.add_particle_list()
						Button:
							text: 'Reset'
							on_press: root.reset_particle_list()
					BoxLayout:
						orientation: 'vertical'
						size_hint: (1, 1)

						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'm'
								size_hint: (0.2, 1)
							Label:
								text: str(round(mass_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: mass_slider
								size_hint: (1, 1)
								min: 1
								max: 10
								step: 0.5
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'x0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(x0_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: x0_slider
								size_hint: (1, 1)
								min: -100
								max: 100
								step: 1
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'y0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(y0_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: y0_slider
								size_hint: (1, 1)
								min: -100
								max: 100
								step: 1
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'vx0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(vx0_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: vx0_slider
								size_hint: (1, 1)
								min: -10
								max: 10
								step: 0.1
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'vy0'
								size_hint: (0.2, 1)
							Label:
								text: str(round(vy0_slider.value,2))
								size_hint: (0.2, 1)
							Slider:
								id: vy0_slider
								size_hint: (1, 1)
								min: -10
								max: 10
								step: 0.1